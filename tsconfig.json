{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/apiwork/page.js", "app/(shell)/feed/page.tsx", "app/(shell)/profile/page.jsx", "app/(shell)/jobs/[id]/page.jsx", "app/(shell)/messages/page.jsx", "app/(shell)/messages/ChatThread.jsx", "app/(shell)/messages/ChatList.jsx", "components/LeftSidebar.tsx", "app/(shell)/message/page.jsx", "app/(shell)/market/[id]/page.jsx", "app/(shell)/feed/PostDetailModal.tsx", "app/(shell)/profile/edit/page.jsx"],
  "exclude": ["node_modules"]
}
